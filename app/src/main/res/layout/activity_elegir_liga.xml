<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo3"
    tools:context=".ElegirLigaActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnLigaSantander"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="equiposLigaSantander"
            app:srcCompat="@drawable/ligasantander2" />

        <ImageButton
            android:id="@+id/btnPremierLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="equiposPremierLeague"
            app:srcCompat="@drawable/premierleague2" />

        <ImageButton
            android:id="@+id/btnLigaArgentina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="equiposSerieA"
            app:srcCompat="@drawable/restodelmundo2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/webview_elegirLiga"
                android:layout_width="407dp"
                android:layout_height="583dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>